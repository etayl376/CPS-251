<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/android_image_1"
                android:contentDescription="Image 1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_one"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:text="Display Image 1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_two"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/android_image_2"
                android:contentDescription="Image 2" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:text="Display Image 2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_three"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/android_image_3"
                android:contentDescription="Image 3" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:text="Display Image 3" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
